          <div class="col-12">
            <img
              src="<%= profileImg %>"
              class="rounded mb-2 mx-auto d-block"
              width="150"
              height="150"
            />
          </div>
        </div>
        <div class="row">
          <div class="col-6">Name</div>
          <div class="col-6"><%- displayName %></div>
        </div>
      </div>
    </div>
  </div>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
