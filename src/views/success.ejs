<!-- CSS (load bootstrap from a CDN) -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
/>
<style>
  body {
    background-color: #2f4050;
  }
  .btn {
    color: white;
  }
  .btn:hover {
    color: white;
  }
  .btn-twtich {
    background-color: #6441a5;
    border-color: #6441a5;
  }
  .btn-twtich:hover {
